<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31" >

        <meta-data
            android:name="android.app.background"
            android:resource="@color/background" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="" />

        <activity
            android:name=".StartLoading"
            android:theme="@style/Theme.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".HomePage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".CreateApplicationPage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".MessagePage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".AllApplicationPage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".MyApplicationPage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".BuyPremiumPage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".EditProfilePage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".MapPage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

        <activity
            android:name=".ViewApplicationPage"
            android:theme="@style/Theme.All"
            android:exported="false">
        </activity>

    </application>
</manifest>